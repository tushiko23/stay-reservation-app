  <%= render 'shared/header'%>
  <div class="form-room-new-container">
    <h2>施設の新規登録</h2>

  <div class="form-room-new-wrapper">
  
  <%= form_with model: @room, url: rooms_path, local: true do |f| %>

  <div class="form-room-new-row horizontal">
    <div class="form-room-new-meta">
      <div class="form-room-new-label">
          <%= f.label :name, class: 'form-room-new-title' do %>
            施設名<small>※必須</small>
          <% end %>
      </div>

      <div class="form-room-new-error">
        <% if f.object.errors.has_key?(:name) %>
        <%= f.object.errors.full_messages_for(:name).join(", ") %>
        <% end %>
      </div>
    </div>
    
    <div class="form-room-new-input">
    <%= f.text_field :name, placeholder: "施設名を入力", class: 'form-room-new-value' %>
    </div>
  </div>

  <div class="form-room-new-row horizontal">
    <div class="form-room-new-meta">
      <div class="form-room-new-label">
        <%= f.label :introduction, class: 'form-room-new-title' do %>
          施設詳細<small>※必須</small>
        <% end %> 
      </div>

      <div class="form-room-new-error">
        <% if f.object.errors.has_key?(:introduction) %>
        <%= f.object.errors.full_messages_for(:introduction).join(", ") %>
        <% end %>
      </div>
    </div>

    <div class="form-room-new-input">
    <%= f.text_area :introduction, placeholder: "施設詳細を入力", class: "form-room-new-value" %>
    </div>

  </div>

  <div class="form-room-new-row horizontal">
    <div class="form-room-new-meta">
      <div class="form-room-new-label">
      <%= f.label :fee_per_day, class: 'form-room-new-title' do %>
        料金<small>※必須</small>
      <% end%>
      </div>

      <div class="form-room-new-error">
      <% if f.object.errors.has_key?(:fee_per_day) %>
      <%= f.object.errors.full_messages_for(:fee_per_day).join(", ") %>
      <% end %>
      </div>
    </div>
    
    <div class="form-room-new-input">
      <%= f.number_field :fee_per_day, min: 0, step: 1, placeholder: '1日あたりの料金を入力', class: 'form-room-new-value' %>
    </div>
  </div>

  <div class="form-room-new-row horizontal">
    <div class="form-room-new-meta">
      <div class="form-room-new-label">
      <%= f.label :address, class: 'form-room-new-title' do %>
      施設住所<small>※必須</small>
      <% end %>
      </div>

      <div class="form-room-new-error">
        <% if f.object.errors.has_key?(:address) %>
          <%= f.object.errors.full_messages_for(:address).join(", ") %>
        <% end %>
      </div>
    </div>
    
    <div class="form-room-new-input">
    <%= f.text_field :address, placeholder: "施設住所を入力", class: 'form-room-new-value' %>
    </div>

  </div>

  <div class="form-room-new-row horizontal form-room-new-media">
    <div class="form-room-new-label form-room-new-media-label">
    <%= f.label :image, '施設画像', class: 'form-room-new-title ' %>
    </div>

    <div class="form-room-new-input form-room-new-media-input">
      <label for="new_room_icon" class="room-upload-btn">画像をアップロード</label>
      <span class="file-name" data-filename="room-file-name" >選択されていません</span>
      <%= f.file_field :image, id: "new_room_icon", autocomplete: "icon", class: 'form-room-new-img icon-input js-file-input', data: { filename_target: "room-file-name" } %>
    </div>
  </div>
  
    <div class="form-room-new-btn">
      <%= f.submit '保存', class: "room-new-btn room-new-btn-ope" %>
      <%= link_to '← 戻る', request.referer || rooms_path, class: "room-new-btn room-new-btn-return" %>
    </div>
  </div>  
  <% end %>
  </div>
  </div>

  </div>
  <%= render 'shared/footer'%>

