<%= render 'shared/header'%>

<h2>アカウント</h2>

<%= form_with model: @user, url: user_registration_path, method: :put, local: :true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><small>※変更する場合は新しいメールアドレスを入力</small><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "変更後パスワード" %> 
    <small>※パスワードを変更する場合</small>
    <% if @minimum_password_length %>
      <small>※<%= @minimum_password_length %>字以上で入力</small><br>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "変更後のパスワードを入力" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認パスワード" %>
    <small>※パスワードを変更する場合</small><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "変更後のパスワードを入力" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><small>※必須</small><br />
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワードを入力" %>
  </div>

  <div class="actions">
    <%= f.submit "編集する" %>
  </div>
<% end %>

<%= link_to "戻る", settings_path(tab: :account) %>
