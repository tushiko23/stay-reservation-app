<%= render 'shared/header'%>

<h2>新規登録</h2>

<%= form_with(model: @user, url: user_registration_path, local: true ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><small>※必須</small><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "new-name", placeholder: "#{t('activerecord.attributes.user.name')}を入力"  %>
  </div>
  <div class="field">
    <%= f.label :email %><small>※必須</small><br />
    <%= f.email_field :email, autocomplete: "new-email", placeholder: "#{t('activerecord.attributes.user.email')}を入力" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <small>※<%= @minimum_password_length %>字以上で入力</small>
    <% end %>
    <small>※必須</small><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{t('activerecord.attributes.user.password')}を入力" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><small>※必須</small><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "#{t('activerecord.attributes.user.password_confirmation')}を入力" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
